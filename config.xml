<?xml version='1.0' encoding='utf-8'?>
<widget id="com.iamcebu.learnbaybayin" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Learn Baybayin</name>
    <description>
        An eLearning application for the Baybayin Script. Built using the Apache Cordova platform.
    </description>
    <author email="nogra@outlook.com" href="http://cordova.io">
        GetLoud Tech
    </author>
    <icon src="res/icon/baybayin-icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^7.0.0" />
</widget>
