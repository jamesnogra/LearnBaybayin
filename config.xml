<?xml version='1.0' encoding='utf-8'?>
<widget id="com.iamcebu.learnbaybayin" version="1.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Learn Baybayín</name>
    <description>
        An eLearning application for the Baybayín Script. Built using the Apache Cordova platform.
    </description>
    <author email="love.gerald@yahoo.com" href="https://learnbaybayin.iamcebu.com/">
        GetLoud Tech
    </author>
    <widget version="1.0.5" />
    <icon src="res/icon/baybayin-icon.png" />
    <preference name="orientation" value="portrait" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-x-socialsharing" spec="https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="24.1.1+" />
    </plugin>
    <engine name="android" spec="^7.0.0" />
</widget>
